//===========================================================================
//
// Custom Widgets for SpriteShadow 
// 3saster: names modified, ScaleSlider added, added option to Option class
//          to not display if DEADCODEDONTUSE is the IWAD.
// Adds tooltips to widgets
//
// Some redundant duplicates here but whatever; menus are painful to work
// with in general anyway. >:(
//
//===========================================================================

// The DEADCODEDONTUSE is the HacX menu thing from FullHud. I'm not using and GZDoom kept giving me errors when I removed it so I'm just to rename it to Dead Code.
class OptionMenuItemMOToolTipOption : OptionMenuItemOption
{
	String mTooltip;
	bool DEADCODEDONTUSEShow; // Show this option if DEADCODEDONTUSE is active
	bool isDEADCODEDONTUSE()
	{
		return (Wads.CheckNumForName("DEADCODEDONTUSE-R",0)!=-1 || Wads.CheckNumForName("DEADCODEDONTUSE",0)!=-1);
	}

	OptionMenuItemMOToolTipOption Init(String label, String tooltip, Name command, Name values, CVar graycheck = null, int center = 0, bool allowDEADCODEDONTUSE = true)
	{
		DEADCODEDONTUSEShow = allowDEADCODEDONTUSE || !isDEADCODEDONTUSE();
		if(DEADCODEDONTUSEShow)
		{
			mTooltip = tooltip;
			Super.Init(label, command, values, graycheck, center);
		}
		return self;
	}
}

class OptionMenuItemMOToolTipSlider : OptionMenuItemSlider
{
	String mTooltip;

	OptionMenuItemMOToolTipSlider Init(String label, String tooltip, Name command, double min, double max, double step, int showval = 1)
	{
		mTooltip = tooltip;
		Super.Init(label, command, min, max, step, showval);
		return self;
	}
}

class OptionMenuItemMOToolTipScaleSlider : OptionMenuItemScaleSlider
{
	String mTooltip;

	OptionMenuItemMOToolTipScaleSlider Init(String label, String tooltip, Name command, double min, double max, double step, String zero, String negone = "")
	{
		mTooltip = tooltip;
		Super.Init(label, command, min, max, step, zero, negone);
		return self;
	}
}

class OptionMenuItemMOToolTipControl : OptionMenuItemControl
{
	String mTooltip;

	OptionMenuItemMOToolTipControl Init(String label, String tooltip, Name command)
	{
		mTooltip = tooltip;
		Super.Init(label, command);
		return self;
	}
}

//===========================================================================
//
// SpriteShadow Menu
//
//===========================================================================

class MOToolTipMenu : OptionMenu
{
	override void Drawer ()
	{
		// Delete entry in DEADCODEDONTUSE if this option should not be on
		for(int i = 0; i < mDesc.mItems.Size(); i++)
			if( mDesc.mItems[i] is "OptionMenuItemMOToolTipOption" )
				if( !OptionMenuItemMOToolTipOption(mDesc.mItems[i]).DEADCODEDONTUSEShow )
					mDesc.mItems.Delete(i);

		Super.Drawer();

		String tt;

		if (mDesc.mSelectedItem > 0)
		{
			if (mDesc.mItems[mDesc.mSelectedItem] is "OptionMenuItemMOToolTipOption")
			{
				tt = StringTable.Localize(OptionMenuItemMOToolTipOption(mDesc.mItems[mDesc.mSelectedItem]).mTooltip);
			}

			if (mDesc.mItems[mDesc.mSelectedItem] is "OptionMenuItemMOToolTipSlider")
			{
				tt = StringTable.Localize(OptionMenuItemMOToolTipSlider(mDesc.mItems[mDesc.mSelectedItem]).mTooltip);
			}
			
			if (mDesc.mItems[mDesc.mSelectedItem] is "OptionMenuItemMOToolTipScaleSlider")
			{
				tt = StringTable.Localize(OptionMenuItemMOToolTipScaleSlider(mDesc.mItems[mDesc.mSelectedItem]).mTooltip);
			}

			if (mDesc.mItems[mDesc.mSelectedItem] is "OptionMenuItemMOToolTipControl")
			{
				tt = StringTable.Localize(OptionMenuItemMOToolTipControl(mDesc.mItems[mDesc.mSelectedItem]).mTooltip);
			}
		}

		if (tt.Length() > 0)
		{
			Screen.DrawText (OptionFont(), OptionMenuSettings.mFontColorValue,
				(Screen.GetWidth() - OptionFont().StringWidth (tt) * CleanXfac_1) / 2,
				BigFont.GetHeight() * CleanYfac_1 * 2.5,
				tt,
				DTA_CleanNoMove_1, true);
		}
	}
}
